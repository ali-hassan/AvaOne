<% render "layouts/header" %>

<!-- ===============//colection sección inicio \\================= -->
<section class="collection-section padding-top padding-bottom">
  <div class="container">
    <div class="section-header">
      <h3 class="header-title">All Collection</h3>
    </div>
    <div class="section-wrapper">
      <div class="collection-wrapper collection-loadmore">
        <div class="row justify-content-center g-4">
          <% @nfts.each do |nft| %>
            <div class="col-lg-4 col-md-6">
              <div class="nft-item collection-item">
                <div class="nft-inner">
                  <div class="coll-thumb-wrapper">
                    <div class="nft-coll-thumb ">
                      <div class="thumb-list swiper-wrapper">
                        <div class="swiper-slide">
                          <div class="single-thumb">
                            <%=image_tag nft.image.path, alt: "cat-image"  %>
                          </div>
                        </div>
                        <div class="swiper-slide">
                          <div class="single-thumb"><%=image_tag nft.image.path, alt: "cat-image"  %>
                          </div>
                        </div>
                        <div class="swiper-slide">
                          <div class="single-thumb"><%=image_tag nft.image.path, alt: "cat-image"  %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="nft-content">
                    <div class="collection-title">
                      <h5><a href="author.html"><%= nft.name %></a> </h5>
                      <p>Collection has <%= nft.created_nfts %> items</p>
                      <p><%= nft.description %></p>
                    </div>

                    <div
                      class="author-details d-flex flex-wrap justify-content-between align-items-center">
                      <div class="single-author d-flex align-items-center">
                        <a href="author.html" class="veryfied"><img
                          src="<%= nft.image.path %>" alt="author-img"></a>
                        <h6><a href="author.html"><%= nft.person.try(:display_name) %> </a></h6>
                      </div>
                      <span class="badge rounded-pill"><i class="icofont-heart"></i>
                      11.3k</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

