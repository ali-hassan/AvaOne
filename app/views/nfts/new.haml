%section.page-header-section.style-1
  .container
    .page-header-content
      .page-header-inner
        .page-title
          %h2
            %big
              Create NFT
              %big
        %ol.breadcrumb
          %li
            %a{:href => "index.html"} Home
          %li.active Create NFT
