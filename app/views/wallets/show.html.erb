<%= render "layouts/header" %>


<!-- ==========sup top sección inicio========== -->
<section class="page-header-section style-1">
  <div class="container">
    <div class="page-header-content">
      <div class="page-header-inner">
        <div class="page-title">
          <h2>Connect Your Wallet</h2>
        </div>
        <ol class="breadcrumb">
          <li><a href="<%= root_path %>">Home</a></li>
          <li class="active">Wallet</li>
        </ol>
      </div>
    </div>
  </div>
</section>
<!-- ==========sup top sección final========== -->


<!-- ==========wallet sección inicio========== -->
<section class="wallet-section padding-top padding-bottom">
  <div class="container">
    <div class="wallet-inner">
      <div class="wallet-title text-center">
        <h3 class="mb-3">Connect your crypto wallet</h3>
        <p class="m-auto mb-5">Connect with one of available wallet providers or <a
          href="signup.html">create a
          new wallet</a></p>
      </div>
      <ul class="nav justify-content-center nav-pills wallet-tab-list" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
          <div class="nav-link wallet-tab active" id="wallet-tab-1" data-bs-toggle="pill"
               data-bs-target="#pills-wallet-1" role="tab" aria-controls="pills-wallet-1"
               aria-selected="true">
            <img src="assets/images/wallet/metamask.svg" alt="Metamask">
            <span>Metamask</span>
          </div>
        </li>
        <li class="nav-item" role="presentation">
          <div class="nav-link wallet-tab" id="wallet-tab-2" data-bs-toggle="pill"
               data-bs-target="#pills-wallet-2" role="tab" aria-controls="pills-wallet-2"
               aria-selected="false">
            <img src="assets/images/wallet/binance.svg" alt="Binance"><span>Binance</span>

          </div>
        </li>
        <li class="nav-item" role="presentation">
          <div class="nav-link wallet-tab" id="wallet-tab-3" data-bs-toggle="pill"
               data-bs-target="#pills-wallet-3" role="tab" aria-controls="pills-wallet-3"
               aria-selected="false">
            <img src="assets/images/wallet/formatic.svg" alt="Formatic">
            <span>Formatic</span>
          </div>
        </li>
        <li class="nav-item" role="presentation">
          <div class="nav-link wallet-tab" id="wallet-tab-4" data-bs-toggle="pill"
               data-bs-target="#pills-wallet-4" role="tab" aria-controls="pills-wallet-4"
               aria-selected="false">
            <img src="assets/images/wallet/walletconnect.svg" alt="WalletConnect">
            <span>Walletconnect</span>
          </div>
        </li>
      </ul>

      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-wallet-1" role="tabpanel"
             aria-labelledby="wallet-tab-1">
          <div class="wallet-content">
            <div class="wallet-img">
              <img src="assets/images/wallet/metamask.svg" alt="Wallet Name">
            </div>
            <div class="wallet-desc">
              <h5>Connect Your MetaMask Wallet</h5>
              <a href="#" class="default-btn small-btn move-right"><span>Sign In</span> </a>
              <a href="#" target="_blank" rel="noopener noreferrer">Learn how to use Metamask
                wallet</a>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-wallet-2" role="tabpanel" aria-labelledby="wallet-tab-2">
          <div class="wallet-content">
            <div class="wallet-img">
              <img src="assets/images/wallet/binance.svg" alt="Wallet Name">
            </div>
            <div class="wallet-desc">
              <h5>Connect Your Binance Wallet</h5>
              <a href="#" class="default-btn small-btn move-right"> <span>Sign In</span></a>
              <a href="#" target="_blank" rel="noopener noreferrer">Learn how to use Binance
                wallet</a>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-wallet-3" role="tabpanel" aria-labelledby="wallet-tab-3">
          <div class="wallet-content">
            <div class="wallet-img">
              <img src="assets/images/wallet/formatic.svg" alt="Wallet Name">
            </div>
            <div class="wallet-desc">
              <h5>Connect Your Formatic Wallet</h5>
              <a href="#" class="default-btn small-btn move-right"><span>Sign In</span></a>
              <a href="#" target="_blank" rel="noopener noreferrer">Learn how to use Formatic
                wallet</a>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-wallet-4" role="tabpanel" aria-labelledby="wallet-tab-4">
          <div class="wallet-content">
            <div class="wallet-img">
              <img src="assets/images/wallet/walletconnect.svg" alt="Wallet Name">
            </div>
            <div class="wallet-desc">
              <h5>Connect Your AVA ONE Wallet</h5>
              <a href="#" class="default-btn small-btn move-right"> <span>Sign In</span></a>
              <a href="#" target="_blank" rel="noopener noreferrer">Learn how to use Wallet Connect
                wallet</a>
            </div>
          </div>
        </div>
      </div>


      <p class="mt-5 mb-0 wallet-notice"><span class="me-1 theme-color"><i
        class="icofont-bulb-alt"></i></span>Connect your wallet fast and securely.
        We are your best option for trade and shop items.</p>
    </div>
  </div>
</section>
<%= render "layouts/footer" %>